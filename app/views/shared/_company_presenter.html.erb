<section id="presenter">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2 class='bold text-center'>Encontre vagas de trabalho. Contrate pessoas qualificadas</h3>
				<p class='text-center'>A plataforma gratuita da comunidade, A ponte para sua proxima conquista</p>
        <br>

				<%= search_form_for(@query, url: search_companies_path, html: { id: 'pfForm', method: :post }) do |f| %>
          <div class='col-md-10 col-md-offset-1'>
          	<div class="panel panel-default" id='jobSearch-block'>
          		<div class="panel-body">
          			<div class="col-md-5">
          				<div class='input-group'>
          					<div class='input-group-addon'>
          						<i class="fa-solid fa-hashtag"></i>
          					</div>
          	      	<%= f.search_field :name_cont, class: 'form-control',
          					placeholder: 'Nome da Empresa', autocomplete: 'off' %>
          				</div>
          			</div>
          			<div class="col-md-5">
          				<div class='input-group'>
          					<div class='input-group-addon'>
          						<i class="fa-solid fa-location-dot"></i>
          					</div>
          					<%= f.search_field :location_cont, class: 'form-control',
          					placeholder: 'Local', autocomplete: 'off' %>
          				</div>
          			</div>
          			<div class="col-md-2">
          				<%= f.submit 'Buscar', class: 'btn btn-default btn-lg top',
          				style: 'width: 100%;' %>
          			</div>
          		</div>
          	</div>
          </div>
				<% end %>
			</div>
		</div>
	</div>
</section>