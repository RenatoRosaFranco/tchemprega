<section id="testimonial">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div id="heading">
          <div class="text-center">
            <h5 class='bold alternative uppercase'>Testemunhos</h5>
            <h2>O que as <span class='bold alternative'>Pessoas</span> dizem sobre?</h2>
            <hr>
          </div>
        </div>

        <div id="testimonial-block">
          <% (1..3).each do |testimonial| %>
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-body testimonials">
                <div class='media'>
                  <div class="media-left pull-left">
                    <%= image_tag('default.jpg', class: 'logo') %>
                  </div>
                  <div class='media-body'>
                    <h4 class='bold'>John Doe <small class='bold'>/ USP</small></h4>
                    <p style='font-size: 12px;'>A Plataforma realmente funciona, me ajudou
                    muito a encontrar o emprego que eu procurava, eu recomendo!!</blockquote>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>